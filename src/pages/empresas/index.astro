---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/common/Header.astro';

// Simulación de datos de empresas
const empresas = [
    {
        id: '1',
        nombre: 'Tech Solutions',
        logo: '/img/empresas/tech-solutions.png',
        sector: 'Tecnología',
        ubicacion: 'San Isidro, Lima',
        descripcion: 'Empresa líder en desarrollo de software y soluciones tecnológicas.',
        ofertas_activas: 3,
        practicantes_actuales: 5,
        sitio_web: 'www.techsolutions.com',
        tamano: '50-100 empleados'
    },
    {
        id: '2',
        nombre: 'Global Corp',
        logo: '/img/empresas/global-corp.png',
        sector: 'Consultoría',
        ubicacion: 'Miraflores, Lima',
        descripcion: 'Consultora internacional especializada en estrategia empresarial y transformación digital.',
        ofertas_activas: 2,
        practicantes_actuales: 3,
        sitio_web: 'www.globalcorp.com',
        tamano: '100-500 empleados'
    },
    {
        id: '3',
        nombre: 'Marketing Pro',
        logo: '/img/empresas/marketing-pro.png',
        sector: 'Marketing',
        ubicacion: 'Surco, Lima',
        descripcion: 'Agencia de marketing digital especializada en estrategias omnicanal.',
        ofertas_activas: 1,
        practicantes_actuales: 2,
        sitio_web: 'www.marketingpro.com',
        tamano: '10-50 empleados'
    }
];

const sectores = ['Todos', 'Tecnología', 'Consultoría', 'Marketing', 'Finanzas', 'Educación', 'Salud'];
---

<Layout title="Empresas - Sistema PPP">
    <Header />
    
    <div class="py-10">
        <main>
            <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
                <!-- Encabezado -->
                <div class="md:flex md:items-center md:justify-between bg-white p-6 rounded-lg shadow-sm mb-8">
                    <div class="min-w-0 flex-1">
                        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
                            Empresas Participantes
                        </h2>
                        <p class="mt-2 text-sm text-gray-600">
                            Conoce las empresas que ofrecen prácticas pre profesionales en nuestra plataforma
                        </p>
                    </div>
                </div>

                <!-- Filtros y Búsqueda -->
                <div class="bg-white p-6 rounded-lg shadow-sm mb-8">
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                        <div>
                            <label for="sector" class="block text-sm font-medium text-gray-700">Sector</label>
                            <select id="sector" class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                                {sectores.map(sector => (
                                    <option>{sector}</option>
                                ))}
                            </select>
                        </div>
                        <div>
                            <label for="busqueda" class="block text-sm font-medium text-gray-700">Buscar</label>
                            <div class="mt-1 relative rounded-md shadow-sm">
                                <input
                                    type="text"
                                    name="busqueda"
                                    id="busqueda"
                                    class="block w-full rounded-md border-gray-300 pr-10 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                                    placeholder="Buscar empresas..."
                                />
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Lista de Empresas -->
                <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
                    {empresas.map((empresa) => (
                        <div class="bg-white overflow-hidden shadow-sm rounded-lg hover:shadow-md transition-all duration-200 border border-gray-100">
                            <div class="p-6">
                                <div class="flex items-center space-x-4">
                                    <div class="h-16 w-16 flex-shrink-0 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center text-white">
                                        <span class="text-2xl font-bold">
                                            {empresa.nombre.charAt(0)}
                                        </span>
                                    </div>
                                    <div>
                                        <h3 class="text-lg font-semibold text-gray-900">
                                            {empresa.nombre}
                                        </h3>
                                        <p class="text-sm text-gray-500">{empresa.sector}</p>
                                    </div>
                                </div>
                                
                                <div class="mt-4">
                                    <div class="flex items-center text-sm text-gray-500">
                                        <svg class="h-5 w-5 mr-1.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                        {empresa.ubicacion}
                                    </div>
                                    <p class="mt-3 text-sm text-gray-500 line-clamp-2">{empresa.descripcion}</p>
                                </div>

                                <div class="mt-4 flex items-center justify-between text-sm">
                                    <div class="flex items-center space-x-4">
                                        <div class="flex items-center">
                                            <span class="font-medium text-indigo-600">{empresa.ofertas_activas}</span>
                                            <span class="ml-1 text-gray-500">ofertas</span>
                                        </div>
                                        <div class="flex items-center">
                                            <span class="font-medium text-indigo-600">{empresa.practicantes_actuales}</span>
                                            <span class="ml-1 text-gray-500">practicantes</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-6 flex items-center justify-between space-x-4">
                                    <a
                                        href={`/empresas/${empresa.id}`}
                                        class="flex-1 text-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                                    >
                                        Ver detalles
                                    </a>
                                    <a
                                        href={`/practicas?empresa=${empresa.id}`}
                                        class="flex-1 text-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                                    >
                                        Ver ofertas
                                    </a>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </main>
    </div>
</Layout> 