---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/common/Header.astro';
import { type EstadoDocumento, estadosDocumento } from '../../../types/estados';

const { codigo } = Astro.params;

// Simulación de datos de práctica
const practica = {
    estudiante: {
        nombre: 'Ana García',
        codigo: '2021001',
        carrera: 'Ingeniería de Sistemas',
        ciclo: 'Ciclo 8',
        email: 'ana.garcia@universidad.edu.pe',
        telefono: '987654321'
    },
    empresa: {
        nombre: 'Tech Solutions',
        ruc: '20123456789',
        direccion: 'Av. Tecnológica 123, San Isidro',
        representante: 'Juan Pérez',
        email: 'rrhh@techsolutions.com',
        telefono: '(01) 234-5678'
    },
    practica: {
        fecha_inicio: '15/03/2024',
        estado: 'En Progreso (Docs Iniciales OK)',
        horas_completadas: 120,
        horas_requeridas: 480,
        supervisor: 'Ing. Carlos Martínez',
        area: 'Desarrollo de Software'
    },
    documentos: [
        {
            nombre: 'Carta de Presentación',
            estado: 'Aprobado' as EstadoDocumento,
            fecha: '10/03/2024'
        },
        {
            nombre: 'Plan de Trabajo',
            estado: 'Aprobado' as EstadoDocumento,
            fecha: '12/03/2024'
        },
        {
            nombre: 'Informe Mensual Marzo',
            estado: 'Pendiente' as EstadoDocumento,
            fecha: '-'
        }
    ],
    actividades: [
        {
            fecha: '15/03/2024',
            descripcion: 'Inicio de prácticas - Inducción',
            horas: 8
        },
        {
            fecha: '18/03/2024',
            descripcion: 'Capacitación en tecnologías del proyecto',
            horas: 16
        },
        {
            fecha: '25/03/2024',
            descripcion: 'Desarrollo de funcionalidades frontend',
            horas: 40
        }
    ]
};

const estadoClases = {
    'Aprobado': 'bg-green-100 text-green-800',
    'Pendiente': 'bg-yellow-100 text-yellow-800'
} as const;
---

<Layout title={`Práctica de ${practica.estudiante.nombre} - Sistema PPP`}>
    <Header />
    
    <div class="py-10">
        <header>
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between">
                    <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900">
                        Detalles de Práctica Pre Profesional
                    </h1>
                    <div class="flex space-x-3">
                        <button type="button" class="rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                            Generar Reporte
                        </button>
                        <button type="button" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                            Actualizar Estado
                        </button>
                    </div>
                </div>
            </div>
        </header>
        <main>
            <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
                <div class="space-y-6 mt-8">
                    <!-- Información General -->
                    <div class="bg-white shadow sm:rounded-lg">
                        <div class="px-4 py-5 sm:p-6">
                            <div class="grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-3">
                                <div>
                                    <h3 class="text-base font-semibold leading-7 text-gray-900">Información del Estudiante</h3>
                                    <dl class="mt-2 space-y-1 text-sm leading-6">
                                        <div>
                                            <dt class="inline text-gray-500">Nombre:</dt>
                                            <dd class="inline ml-1">{practica.estudiante.nombre}</dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">Código:</dt>
                                            <dd class="inline ml-1">{practica.estudiante.codigo}</dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">Carrera:</dt>
                                            <dd class="inline ml-1">{practica.estudiante.carrera}</dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">Ciclo:</dt>
                                            <dd class="inline ml-1">{practica.estudiante.ciclo}</dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">Email:</dt>
                                            <dd class="inline ml-1">{practica.estudiante.email}</dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">Teléfono:</dt>
                                            <dd class="inline ml-1">{practica.estudiante.telefono}</dd>
                                        </div>
                                    </dl>
                                </div>

                                <div>
                                    <h3 class="text-base font-semibold leading-7 text-gray-900">Información de la Empresa</h3>
                                    <dl class="mt-2 space-y-1 text-sm leading-6">
                                        <div>
                                            <dt class="inline text-gray-500">Nombre:</dt>
                                            <dd class="inline ml-1">{practica.empresa.nombre}</dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">RUC:</dt>
                                            <dd class="inline ml-1">{practica.empresa.ruc}</dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">Dirección:</dt>
                                            <dd class="inline ml-1">{practica.empresa.direccion}</dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">Representante:</dt>
                                            <dd class="inline ml-1">{practica.empresa.representante}</dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">Email:</dt>
                                            <dd class="inline ml-1">{practica.empresa.email}</dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">Teléfono:</dt>
                                            <dd class="inline ml-1">{practica.empresa.telefono}</dd>
                                        </div>
                                    </dl>
                                </div>

                                <div>
                                    <h3 class="text-base font-semibold leading-7 text-gray-900">Información de la Práctica</h3>
                                    <dl class="mt-2 space-y-1 text-sm leading-6">
                                        <div>
                                            <dt class="inline text-gray-500">Fecha de inicio:</dt>
                                            <dd class="inline ml-1">{practica.practica.fecha_inicio}</dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">Estado:</dt>
                                            <dd class="inline ml-1">
                                                <span class="inline-flex items-center rounded-md bg-green-100 px-2 py-1 text-xs font-medium text-green-800">
                                                    {practica.practica.estado}
                                                </span>
                                            </dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">Horas completadas:</dt>
                                            <dd class="inline ml-1">{practica.practica.horas_completadas} de {practica.practica.horas_requeridas}</dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">Supervisor:</dt>
                                            <dd class="inline ml-1">{practica.practica.supervisor}</dd>
                                        </div>
                                        <div>
                                            <dt class="inline text-gray-500">Área:</dt>
                                            <dd class="inline ml-1">{practica.practica.area}</dd>
                                        </div>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Documentos -->
                    <div class="bg-white shadow sm:rounded-lg">
                        <div class="px-4 py-5 sm:p-6">
                            <h3 class="text-base font-semibold leading-7 text-gray-900">Documentos</h3>
                            <div class="mt-4 flow-root">
                                <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                                    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                                        <table class="min-w-full divide-y divide-gray-300">
                                            <thead>
                                                <tr>
                                                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Documento</th>
                                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Estado</th>
                                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Fecha</th>
                                                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
                                                        <span class="sr-only">Acciones</span>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody class="divide-y divide-gray-200">
                                                {practica.documentos.map((doc) => (
                                                    <tr>
                                                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">{doc.nombre}</td>
                                                        <td class="whitespace-nowrap px-3 py-4 text-sm">
                                                            <span class={`inline-flex items-center rounded-md px-2 py-1 text-xs font-medium ${estadosDocumento[doc.estado]}`}>
                                                                {doc.estado}
                                                            </span>
                                                        </td>
                                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{doc.fecha}</td>
                                                        <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
                                                            <a href="#" class="text-indigo-600 hover:text-indigo-900">Ver</a>
                                                        </td>
                                                    </tr>
                                                ))}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Actividades -->
                    <div class="bg-white shadow sm:rounded-lg">
                        <div class="px-4 py-5 sm:p-6">
                            <div class="sm:flex sm:items-center">
                                <div class="sm:flex-auto">
                                    <h3 class="text-base font-semibold leading-7 text-gray-900">Registro de Actividades</h3>
                                </div>
                                <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
                                    <button type="button" class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                                        Agregar Actividad
                                    </button>
                                </div>
                            </div>
                            <div class="mt-4 flow-root">
                                <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                                    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                                        <table class="min-w-full divide-y divide-gray-300">
                                            <thead>
                                                <tr>
                                                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Fecha</th>
                                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Descripción</th>
                                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Horas</th>
                                                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
                                                        <span class="sr-only">Acciones</span>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody class="divide-y divide-gray-200">
                                                {practica.actividades.map((actividad) => (
                                                    <tr>
                                                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm text-gray-900 sm:pl-0">{actividad.fecha}</td>
                                                        <td class="px-3 py-4 text-sm text-gray-500">{actividad.descripcion}</td>
                                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{actividad.horas}</td>
                                                        <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
                                                            <a href="#" class="text-indigo-600 hover:text-indigo-900">Editar</a>
                                                        </td>
                                                    </tr>
                                                ))}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</Layout> 