  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 21h16.5M4.5 3h15M5.25 3v18m13.5-18v18M9 6.75h6M9 12h6m-6 4.5h6M5.25 6h.008v.008H5.25V6zm.008 0V6H5.25M5.25 9h.008v.008H5.25V9zm.008 0V9H5.25m0 3h.008v.008H5.25v-2.25zm.008 0v-2.25H5.25m0 3h.008v.008H5.25V12zm.008 0V12H5.25m0 3h.008v.008H5.25v-2.25zm.008 0v-2.25H5.25m0 3h.008v.008H5.25V15zm.008 0V15H5.25M9 3v.75m6-1.5v.75M12 3v.75m0 15v4.5" />
