const IconSeguimiento = `
<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 text-indigo-500 group-hover:text-indigo-400 transition-colors duration-300">
  <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
</svg>
`;

const features = [
  {
    title: 'Para Estudiantes',
    description: 'Descubre oportunidades de prácticas que se alinean con tus metas académicas y profesionales. Da el primer paso hacia la carrera de tus sueños.',
    icon: IconEstudiante,
    href: '/auth/register/student'
  },
  {
    title: 'Para Empresas',
    description: 'Conecta con jóvenes talentosos y motivados. Publica tus ofertas de prácticas y encuentra a los futuros líderes de tu industria.',
    icon: IconEmpresa,
    href: '/auth/register/company'
  },
  {
    title: 'Seguimiento Eficaz',
    description: 'Optimiza la gestión de tus programas de prácticas con herramientas intuitivas para el seguimiento y la evaluación continua.',
    icon: IconSeguimiento,
    href: '/admin/dashboard' 
  }
];

const testimonials = [
  {
    quote: "Gracias a esta plataforma, encontré una práctica increíble que complementó mis estudios y me abrió puertas en el sector.",
    name: "Ana Pérez",
    role: "Estudiante de Ingeniería",
    avatar: "https://source.unsplash.com/random/100x100/?portrait,student"
  },
  {
    quote: "Hemos reclutado talento excepcional a través del sistema. La calidad de los candidatos y la facilidad de gestión son destacables.",
    name: "Carlos Rodríguez",
    role: "Gerente de RRHH, Tech Solutions Inc.",
    avatar: "https://source.unsplash.com/random/100x100/?portrait,manager"
  }
];

--- 

<Layout title="Sistema de Prácticas Pre Profesionales | Bienvenido">
  <Header />
  <div class="scroll-smooth">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center text-center px-4 sm:px-6 lg:px-8 bg-cover bg-center hero-pattern">
      <div class="absolute inset-0 bg-slate-900 opacity-60"></div>
      <div class="relative z-10 max-w-3xl mx-auto space-y-8 animate-fade-in-up">
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-extrabold tracking-tight text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-pink-400 to-white">
          Transforma tu Futuro Profesional Hoy
        </h1>
        <p class="mt-6 text-lg sm:text-xl leading-relaxed text-slate-200 max-w-2xl mx-auto">
          Nuestra plataforma une a estudiantes brillantes con empresas innovadoras. Inicia tu viaje hacia el éxito con prácticas pre profesionales de alto impacto.
        </p>
        <div class="mt-10 flex flex-col sm:flex-row justify-center items-center gap-4 sm:gap-6">
          <a
            href="/auth/register"
            class="group relative inline-flex items-center justify-center px-8 py-3.5 text-base font-medium text-white bg-indigo-600 border border-transparent rounded-lg shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-transform duration-300 ease-in-out hover:scale-105 active:scale-95"
          >
            Regístrate Ahora
            <svg class="w-5 h-5 ml-2 -mr-1 transition-transform duration-300 ease-in-out group-hover:translate-x-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
          <a 
            href="/practicas" 
            class="inline-flex items-center justify-center px-8 py-3.5 text-base font-medium text-slate-100 hover:text-white bg-slate-700/50 hover:bg-slate-600/70 border border-slate-600 rounded-lg shadow-sm transition-transform duration-300 ease-in-out hover:scale-105 active:scale-95">
            Explorar Prácticas
          </a>
        </div>
      </div>
       <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg class="w-8 h-8 text-slate-300 hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path></svg>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-20 sm:py-28 bg-slate-50">
      <div class="mx-auto w-full max-w-screen-xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:text-center mb-16 sm:mb-20">
          <h2 class="text-base font-semibold leading-7 text-indigo-600">Potencia Tu Experiencia</h2>
          <p class="mt-2 text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
            Herramientas Diseñadas para Tu Crecimiento
          </p>
          <p class="mt-6 text-lg leading-8 text-slate-600">
            Ofrecemos una solución integral que simplifica cada etapa del proceso de prácticas, desde la postulación hasta la evaluación final.
          </p>
        </div>
        <div class="grid grid-cols-1 gap-10 sm:gap-12 lg:grid-cols-3">
          {features.map((feature, index) => (
            <div class={`group relative p-8 bg-white rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 ease-in-out transform hover:-translate-y-2 animate-fade-in-up delay-${index * 100}`}>
              <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 w-20 h-20 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                <Fragment set:html={feature.icon} />
              </div>
              <div class="mt-12 text-center">
                <h3 class="text-xl font-semibold leading-8 text-slate-900">
                  {feature.title}
                </h3>
                <p class="mt-4 text-base leading-7 text-slate-600">
                  {feature.description}
                </p>
                <a href={feature.href} class="mt-6 inline-block text-sm font-semibold leading-6 text-indigo-600 hover:text-indigo-500 transition-colors duration-300">
                  Más Información <span aria-hidden="true">→</span>
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-20 sm:py-28 bg-slate-800 text-white">
      <div class="mx-auto w-full max-w-screen-xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:text-center mb-16 sm:mb-20">
          <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">
            Lo que dicen nuestros usuarios
          </h2>
          <p class="mt-4 text-lg leading-8 text-slate-300">
            Descubre cómo hemos ayudado a estudiantes y empresas a alcanzar sus metas.
          </p>
        </div>
        <div class="grid grid-cols-1 gap-10 lg:grid-cols-2 lg:max-w-4xl mx-auto">
          {testimonials.map((testimonial) => (
            <figure class="flex flex-col items-center p-8 bg-slate-700/50 rounded-xl shadow-lg animate-fade-in-up">
              <img class="h-20 w-20 rounded-full object-cover mx-auto" src={testimonial.avatar} alt={`Avatar de ${testimonial.name}`} />
              <blockquote class="mt-6 text-center text-lg leading-7 text-slate-200">
                <p>"{testimonial.quote}"</p>
              </blockquote>
              <figcaption class="mt-6 text-center">
                <div class="font-semibold text-white">{testimonial.name}</div>
                <div class="text-sm text-slate-400">{testimonial.role}</div>
              </figcaption>
            </figure>
          ))}
        </div>
      </div>
    </section>

    <!-- Call to Action Section -->
    <section class="py-20 sm:py-28 bg-gradient-to-r from-purple-600 to-indigo-600">
      <div class="mx-auto w-full max-w-screen-xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-3xl text-center">
          <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
            ¿Listo para Dar el Siguiente Paso?
          </h2>
          <p class="mt-6 text-lg leading-8 text-indigo-100">
            Únete a nuestra creciente comunidad de estudiantes y empresas que están definiendo el futuro profesional.
          </p>
          <div class="mt-10 flex justify-center">
            <a
              href="/auth/register"
              class="transform transition-transform duration-300 hover:scale-105 rounded-lg bg-white px-8 py-3.5 text-base font-semibold text-indigo-600 shadow-xl hover:bg-indigo-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
            >
              Crear Cuenta Gratis
            </a>
          </div>
        </div>
      </div>
    </section>

  </div>
</Layout>

<style>
  .hero-pattern {
    background-image: url('https://images.unsplash.com/photo-1505373877841-8d25f7d46678?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1700&q=80'); /* Imagen de fondo genérica de Unsplash */
    /* Para mejor rendimiento, considera descargar la imagen y servirla localmente */
  }

  @keyframes fade-in-up {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
  }
  
  /* Clase para retraso en animaciones */
  .delay-100 { animation-delay: 0.1s; }
  .delay-200 { animation-delay: 0.2s; }
  .delay-300 { animation-delay: 0.3s; }

  /* Estilo para scroll-smooth (si no se añade globalmente) */
  html {
    scroll-behavior: smooth;
  }
</style>
