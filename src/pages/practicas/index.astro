---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/common/Header.astro';

const ofertas = [
    {
        id: '1',
        titulo: 'Practicante de Desarrollo Web',
        empresa: 'Tech Solutions',
        ubicacion: 'Lima',
        modalidad: 'Híbrido',
        duracion: '6 meses',
        carrera: 'Ingeniería de Sistemas',
        descripcion: 'Buscamos un practicante para unirse a nuestro equipo de desarrollo web, trabajando con tecnologías modernas como React, Node.js y AWS.',
        requisitos: [
            'Estudiante de últimos ciclos',
            'Conocimientos en JavaScript/TypeScript',
            'Experiencia básica con React',
            'Inglés intermedio'
        ],
        beneficios: [
            'Horario flexible',
            'Capacitaciones',
            'Posibilidad de contratación',
            'Ambiente dinámico'
        ],
        fecha_publicacion: '2024-03-25'
    },
    {
        id: '2',
        titulo: 'Practicante de Marketing Digital',
        empresa: 'Global Corp',
        ubicacion: 'Lima',
        modalidad: 'Presencial',
        duracion: '4 meses',
        carrera: 'Marketing',
        descripcion: 'Únete a nuestro equipo de marketing digital para aprender sobre estrategias SEO, SEM y gestión de redes sociales.',
        requisitos: [
            'Estudiante de 7mo ciclo en adelante',
            'Conocimientos de marketing digital',
            'Manejo de redes sociales',
            'Creatividad y proactividad'
        ],
        beneficios: [
            'Horario de medio tiempo',
            'Programa de mentoría',
            'Ambiente colaborativo',
            'Oficinas modernas'
        ],
        fecha_publicacion: '2024-03-24'
    }
];

const categorias = [
    'Todas',
    'Tecnología',
    'Marketing',
    'Administración',
    'Ingeniería',
    'Diseño'
];

const modalidades = ['Todas', 'Presencial', 'Remoto', 'Híbrido'];
---

<Layout title="Ofertas de Prácticas - Sistema PPP">
    <Header />
    
    <div class="py-10">
        <header>
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900">Ofertas de Prácticas Pre Profesionales</h1>
            </div>
        </header>
        <main>
            <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
                <!-- Filtros -->
                <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
                    <div>
                        <label for="categoria" class="block text-sm font-medium text-gray-700">Categoría</label>
                        <select id="categoria" class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                            {categorias.map(categoria => (
                                <option>{categoria}</option>
                            ))}
                        </select>
                    </div>

                    <div>
                        <label for="modalidad" class="block text-sm font-medium text-gray-700">Modalidad</label>
                        <select id="modalidad" class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                            {modalidades.map(modalidad => (
                                <option>{modalidad}</option>
                            ))}
                        </select>
                    </div>

                    <div>
                        <label for="busqueda" class="block text-sm font-medium text-gray-700">Buscar</label>
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <input
                                type="text"
                                name="busqueda"
                                id="busqueda"
                                class="block w-full rounded-md border-gray-300 pr-10 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                                placeholder="Buscar ofertas..."
                            />
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Lista de Ofertas -->
                <div class="mt-8 space-y-6">
                    {ofertas.map((oferta) => (
                        <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
                            <div class="px-4 py-5 sm:p-6">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <h3 class="text-lg font-medium leading-6 text-gray-900">
                                            <a href={`/practicas/${oferta.id}`} class="hover:text-indigo-600">
                                                {oferta.titulo}
                                            </a>
                                        </h3>
                                        <p class="mt-1 text-sm text-gray-500">{oferta.empresa}</p>
                                    </div>
                                    <span class="inline-flex items-center rounded-full bg-indigo-100 px-3 py-0.5 text-sm font-medium text-indigo-800">
                                        {oferta.modalidad}
                                    </span>
                                </div>
                                <div class="mt-4">
                                    <p class="text-sm text-gray-500">{oferta.descripcion}</p>
                                </div>
                                <div class="mt-4">
                                    <div class="flex items-center space-x-4 text-sm text-gray-500">
                                        <div class="flex items-center">
                                            <svg class="h-5 w-5 mr-1.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                            </svg>
                                            {oferta.ubicacion}
                                        </div>
                                        <div class="flex items-center">
                                            <svg class="h-5 w-5 mr-1.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                            {oferta.duracion}
                                        </div>
                                        <div class="flex items-center">
                                            <svg class="h-5 w-5 mr-1.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                                            </svg>
                                            {oferta.carrera}
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4 flex justify-between items-center">
                                    <span class="text-sm text-gray-500">
                                        Publicado el {new Date(oferta.fecha_publicacion).toLocaleDateString('es-ES')}
                                    </span>
                                    <a
                                        href={`/practicas/${oferta.id}`}
                                        class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                                    >
                                        Ver detalles
                                    </a>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </main>
    </div>
</Layout> 