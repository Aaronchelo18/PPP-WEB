---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/common/Header.astro';

const { id } = Astro.params;

// Simulación de datos de la oferta
const oferta = {
    id: '1',
    titulo: 'Practicante de Desarrollo Web',
    empresa: 'Tech Solutions',
    ubicacion: 'Lima',
    modalidad: 'Híbrido'
};
---

<Layout title={`Postular a ${oferta.titulo} - Sistema PPP`}>
    <Header />
    
    <div class="py-10">
        <main>
            <div class="mx-auto max-w-3xl sm:px-6 lg:px-8">
                <div class="space-y-8">
                    <!-- Encabezado -->
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">Postular a práctica pre profesional</h1>
                        <p class="mt-2 text-sm text-gray-600">
                            Completa el formulario para postular a la práctica de {oferta.titulo} en {oferta.empresa}
                        </p>
                    </div>

                    <!-- Formulario de Postulación -->
                    <form action="/api/postulaciones" method="POST" class="space-y-8">
                        <input type="hidden" name="oferta_id" value={id} />
                        
                        <!-- Información Personal -->
                        <div class="bg-white shadow sm:rounded-lg">
                            <div class="px-4 py-5 sm:p-6">
                                <h2 class="text-base font-semibold leading-7 text-gray-900">Información Personal</h2>
                                <p class="mt-1 text-sm leading-6 text-gray-600">
                                    Verifica que tu información personal esté actualizada.
                                </p>

                                <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-6">
                                    <div class="sm:col-span-3">
                                        <label for="nombres" class="block text-sm font-medium leading-6 text-gray-900">Nombres</label>
                                        <div class="mt-2">
                                            <input
                                                type="text"
                                                name="nombres"
                                                id="nombres"
                                                required
                                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                            />
                                        </div>
                                    </div>

                                    <div class="sm:col-span-3">
                                        <label for="apellidos" class="block text-sm font-medium leading-6 text-gray-900">Apellidos</label>
                                        <div class="mt-2">
                                            <input
                                                type="text"
                                                name="apellidos"
                                                id="apellidos"
                                                required
                                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                            />
                                        </div>
                                    </div>

                                    <div class="sm:col-span-3">
                                        <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email</label>
                                        <div class="mt-2">
                                            <input
                                                type="email"
                                                name="email"
                                                id="email"
                                                required
                                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                            />
                                        </div>
                                    </div>

                                    <div class="sm:col-span-3">
                                        <label for="telefono" class="block text-sm font-medium leading-6 text-gray-900">Teléfono</label>
                                        <div class="mt-2">
                                            <input
                                                type="tel"
                                                name="telefono"
                                                id="telefono"
                                                required
                                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                            />
                                        </div>
                                    </div>

                                    <div class="col-span-full">
                                        <label for="direccion" class="block text-sm font-medium leading-6 text-gray-900">Dirección</label>
                                        <div class="mt-2">
                                            <input
                                                type="text"
                                                name="direccion"
                                                id="direccion"
                                                required
                                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                            />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Información Académica -->
                        <div class="bg-white shadow sm:rounded-lg">
                            <div class="px-4 py-5 sm:p-6">
                                <h2 class="text-base font-semibold leading-7 text-gray-900">Información Académica</h2>
                                <p class="mt-1 text-sm leading-6 text-gray-600">
                                    Proporciona información sobre tus estudios actuales.
                                </p>

                                <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-6">
                                    <div class="sm:col-span-3">
                                        <label for="universidad" class="block text-sm font-medium leading-6 text-gray-900">Universidad</label>
                                        <div class="mt-2">
                                            <input
                                                type="text"
                                                name="universidad"
                                                id="universidad"
                                                required
                                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                            />
                                        </div>
                                    </div>

                                    <div class="sm:col-span-3">
                                        <label for="carrera" class="block text-sm font-medium leading-6 text-gray-900">Carrera</label>
                                        <div class="mt-2">
                                            <input
                                                type="text"
                                                name="carrera"
                                                id="carrera"
                                                required
                                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                            />
                                        </div>
                                    </div>

                                    <div class="sm:col-span-2">
                                        <label for="ciclo" class="block text-sm font-medium leading-6 text-gray-900">Ciclo actual</label>
                                        <div class="mt-2">
                                            <select
                                                id="ciclo"
                                                name="ciclo"
                                                required
                                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                            >
                                                <option value="">Seleccionar...</option>
                                                {Array.from({ length: 10 }, (_, i) => (
                                                    <option value={i + 1}>Ciclo {i + 1}</option>
                                                ))}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="sm:col-span-2">
                                        <label for="promedio" class="block text-sm font-medium leading-6 text-gray-900">Promedio ponderado</label>
                                        <div class="mt-2">
                                            <input
                                                type="number"
                                                name="promedio"
                                                id="promedio"
                                                step="0.01"
                                                min="0"
                                                max="20"
                                                required
                                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                            />
                                        </div>
                                    </div>

                                    <div class="sm:col-span-2">
                                        <label for="creditos" class="block text-sm font-medium leading-6 text-gray-900">Créditos aprobados</label>
                                        <div class="mt-2">
                                            <input
                                                type="number"
                                                name="creditos"
                                                id="creditos"
                                                min="0"
                                                required
                                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                            />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Documentos -->
                        <div class="bg-white shadow sm:rounded-lg">
                            <div class="px-4 py-5 sm:p-6">
                                <h2 class="text-base font-semibold leading-7 text-gray-900">Documentos Requeridos</h2>
                                <p class="mt-1 text-sm leading-6 text-gray-600">
                                    Adjunta los documentos necesarios para tu postulación.
                                </p>

                                <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-6">
                                    <div class="col-span-full">
                                        <label for="cv" class="block text-sm font-medium leading-6 text-gray-900">Curriculum Vitae (PDF)</label>
                                        <div class="mt-2">
                                            <input
                                                type="file"
                                                name="cv"
                                                id="cv"
                                                accept=".pdf"
                                                required
                                                class="block w-full text-sm text-gray-900 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100"
                                            />
                                        </div>
                                    </div>

                                    <div class="col-span-full">
                                        <label for="record" class="block text-sm font-medium leading-6 text-gray-900">Record Académico (PDF)</label>
                                        <div class="mt-2">
                                            <input
                                                type="file"
                                                name="record"
                                                id="record"
                                                accept=".pdf"
                                                required
                                                class="block w-full text-sm text-gray-900 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100"
                                            />
                                        </div>
                                    </div>

                                    <div class="col-span-full">
                                        <label for="carta" class="block text-sm font-medium leading-6 text-gray-900">Carta de Presentación (PDF)</label>
                                        <div class="mt-2">
                                            <input
                                                type="file"
                                                name="carta"
                                                id="carta"
                                                accept=".pdf"
                                                required
                                                class="block w-full text-sm text-gray-900 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100"
                                            />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Información Adicional -->
                        <div class="bg-white shadow sm:rounded-lg">
                            <div class="px-4 py-5 sm:p-6">
                                <h2 class="text-base font-semibold leading-7 text-gray-900">Información Adicional</h2>
                                <p class="mt-1 text-sm leading-6 text-gray-600">
                                    Cuéntanos más sobre ti y por qué te interesa esta práctica.
                                </p>

                                <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-6">
                                    <div class="col-span-full">
                                        <label for="experiencia" class="block text-sm font-medium leading-6 text-gray-900">Experiencia relevante</label>
                                        <div class="mt-2">
                                            <textarea
                                                id="experiencia"
                                                name="experiencia"
                                                rows="3"
                                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                            ></textarea>
                                        </div>
                                        <p class="mt-2 text-sm text-gray-500">Describe brevemente tu experiencia relevante para el puesto.</p>
                                    </div>

                                    <div class="col-span-full">
                                        <label for="motivacion" class="block text-sm font-medium leading-6 text-gray-900">Carta de motivación</label>
                                        <div class="mt-2">
                                            <textarea
                                                id="motivacion"
                                                name="motivacion"
                                                rows="4"
                                                required
                                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                            ></textarea>
                                        </div>
                                        <p class="mt-2 text-sm text-gray-500">¿Por qué te interesa esta práctica y qué puedes aportar?</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="flex items-center justify-end space-x-4">
                            <a
                                href={`/practicas/${id}`}
                                class="rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
                            >
                                Cancelar
                            </a>
                            <button
                                type="submit"
                                class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                            >
                                Enviar postulación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</Layout> 