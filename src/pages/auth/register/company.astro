---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/common/Header.astro';

const sectores = [
    'Tecnología',
    'Construcción',
    'Manufactura',
    'Servicios',
    'Comercio',
    'Educación',
    'Salud',
    'Otros'
];
---

<Layout title="Registro de Empresa - Sistema PPP">
    <Header />
    
    <div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">
                Registro de Empresa
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Completa los datos de tu empresa
            </p>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-[480px]">
            <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
                <form class="space-y-6" action="#" method="POST">
                    <!-- Datos de la Empresa -->
                    <div class="space-y-6">
                        <h3 class="text-lg font-medium leading-6 text-gray-900">Datos de la Empresa</h3>
                        
                        <div class="space-y-4">
                            <div>
                                <label for="razon_social" class="block text-sm font-medium leading-6 text-gray-900">
                                    Razón Social
                                </label>
                                <div class="mt-2">
                                    <input
                                        type="text"
                                        name="razon_social"
                                        id="razon_social"
                                        required
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>

                            <div>
                                <label for="ruc" class="block text-sm font-medium leading-6 text-gray-900">
                                    RUC
                                </label>
                                <div class="mt-2">
                                    <input
                                        type="text"
                                        name="ruc"
                                        id="ruc"
                                        required
                                        maxlength="11"
                                        pattern="[0-9]{11}"
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>

                            <div>
                                <label for="sector" class="block text-sm font-medium leading-6 text-gray-900">
                                    Sector
                                </label>
                                <div class="mt-2">
                                    <select
                                        id="sector"
                                        name="sector"
                                        required
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                    >
                                        <option value="">Selecciona un sector</option>
                                        {sectores.map(sector => (
                                            <option value={sector}>{sector}</option>
                                        ))}
                                    </select>
                                </div>
                            </div>

                            <div>
                                <label for="direccion" class="block text-sm font-medium leading-6 text-gray-900">
                                    Dirección
                                </label>
                                <div class="mt-2">
                                    <input
                                        type="text"
                                        name="direccion"
                                        id="direccion"
                                        required
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>

                            <div>
                                <label for="telefono" class="block text-sm font-medium leading-6 text-gray-900">
                                    Teléfono
                                </label>
                                <div class="mt-2">
                                    <input
                                        type="tel"
                                        name="telefono"
                                        id="telefono"
                                        required
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Datos del Representante -->
                    <div class="space-y-6">
                        <h3 class="text-lg font-medium leading-6 text-gray-900">Datos del Representante</h3>
                        
                        <div class="grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-2">
                            <div>
                                <label for="rep_nombres" class="block text-sm font-medium leading-6 text-gray-900">
                                    Nombres
                                </label>
                                <div class="mt-2">
                                    <input
                                        type="text"
                                        name="rep_nombres"
                                        id="rep_nombres"
                                        required
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>

                            <div>
                                <label for="rep_apellidos" class="block text-sm font-medium leading-6 text-gray-900">
                                    Apellidos
                                </label>
                                <div class="mt-2">
                                    <input
                                        type="text"
                                        name="rep_apellidos"
                                        id="rep_apellidos"
                                        required
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>

                            <div>
                                <label for="rep_cargo" class="block text-sm font-medium leading-6 text-gray-900">
                                    Cargo
                                </label>
                                <div class="mt-2">
                                    <input
                                        type="text"
                                        name="rep_cargo"
                                        id="rep_cargo"
                                        required
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>

                            <div>
                                <label for="rep_email" class="block text-sm font-medium leading-6 text-gray-900">
                                    Correo electrónico
                                </label>
                                <div class="mt-2">
                                    <input
                                        type="email"
                                        name="rep_email"
                                        id="rep_email"
                                        required
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Datos de la Cuenta -->
                    <div class="space-y-6">
                        <h3 class="text-lg font-medium leading-6 text-gray-900">Datos de la Cuenta</h3>
                        
                        <div>
                            <label for="email" class="block text-sm font-medium leading-6 text-gray-900">
                                Correo electrónico de la empresa
                            </label>
                            <div class="mt-2">
                                <input
                                    type="email"
                                    name="email"
                                    id="email"
                                    required
                                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                />
                            </div>
                        </div>

                        <div>
                            <label for="password" class="block text-sm font-medium leading-6 text-gray-900">
                                Contraseña
                            </label>
                            <div class="mt-2">
                                <input
                                    type="password"
                                    name="password"
                                    id="password"
                                    required
                                    minlength="8"
                                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                />
                            </div>
                        </div>

                        <div>
                            <label for="password_confirmation" class="block text-sm font-medium leading-6 text-gray-900">
                                Confirmar contraseña
                            </label>
                            <div class="mt-2">
                                <input
                                    type="password"
                                    name="password_confirmation"
                                    id="password_confirmation"
                                    required
                                    minlength="8"
                                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                />
                            </div>
                        </div>
                    </div>

                    <div class="flex items-center">
                        <input
                            id="terms"
                            name="terms"
                            type="checkbox"
                            required
                            class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600"
                        />
                        <label for="terms" class="ml-3 block text-sm leading-6 text-gray-900">
                            Acepto los <a href="#" class="font-semibold text-indigo-600">términos y condiciones</a>
                        </label>
                    </div>

                    <div>
                        <button
                            type="submit"
                            class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                        >
                            Registrar Empresa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</Layout> 